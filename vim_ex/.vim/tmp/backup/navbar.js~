import React, { Component, PropTypes } from 'react';

class Navbar extends Component {
  render() {
    const {tab, onTabChange, total, count} = this.props;
    return (
      <nav className='App-nav'>
        <ul>
          <li className={`App-nav-item ${tab === 0 && 'selected'}`}>
            <a onClick={ onTabChange.bind(this, 0) }>Items</a></li>
          <li className={`App-nav-item ${tab === 1 && 'selected'}`}>
            <a onClick={ onTabChange.bind(this, 1) }>Cart</a></li>
          <span>
              <span className="fa fa-shopping-cart" />
              <span>{count} items </span>
              <span>(${total})</span>
          </span>
        </ul>
        
      </nav>
    );
  }
}

Navbar.propTypes = {
  tab: PropTypes.number.isRequired,
  onTabChange: PropTypes.func.isRequired,
}

export default Navbar
