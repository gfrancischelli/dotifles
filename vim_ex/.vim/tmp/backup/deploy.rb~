# config valid only for current version of Capistrano
lock '3.6.1'

set :application, 'webdoc'
set :repo_url, 'git@bitbucket.org:gifrancischelli/pinheirinho.git'
set :deploy_to, "/home/deploy/applications/#{fetch(:application)}"
set :scm, :git
set :keep_releases, 5
append :linked_files, "secrets.json"
append :linked_dirs, "node_modules", "public/images/galleries", "public/images/news"

task :restart_pm2 do
    on "deploy@104.236.198.234" do
        execute "pm2 restart web"
    end
end

