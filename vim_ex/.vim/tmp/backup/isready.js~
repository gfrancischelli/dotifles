

const acceptCondition = (checkCondition, value) => {
    return new Promise( (resolve, reject) => {
        if (checkCondition(value) ) {
            resolve(value);
        }
    })
}

const isReady = _.curry(acceptCondition)

function enteredScreen = isReady()

function isReady(checkCondition) {

    return function verifyCondition(value) {

        return new Promise( (resolve, reject) => {
            
            if ( checkCondition(value ) ) resolve(value);
        
        })
    }
}


function enteredScreen = isReady(node => {
    const bot_node = node.bot;
    const bot_window = widow.bot;

    return bot_window > bot_node
})
