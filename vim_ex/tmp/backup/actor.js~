function Actor(config) {

    console.log('Actor() right here');

    const { id, node, on, 
            keyframes, timing, repeat } = config;

    const event = on.event;
    const isReady = on.ready;

    const animation = node.animate(keyframes, timing).pause();


    function play() {
        if(isReady() ) animation.play();
        return then()
    }

    function toggle() {
        if(animation.playState == 'paused') animation.play();
        if(animation.playState == 'running') animation.toggle();
    }

    function pause() {
        animation.pause();
    }

    function onFinish() {
        return animation.finished.then( fn(`${id}Finished`) )
    }

    function getAnimation() {
        if( isReady() ) {
            const a = node.animate(keyframes, timing);

            return 
                a.finished
                 .then( () => `${id}Finished`)
        }
    }
   
    return {
        event:  event,
        play: play,
        toggle: toggle,
        pause: pause,
        onFinish: onFinish,
    }
}

module.exports = Actor;
